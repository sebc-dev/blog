{
  "name": "blog_astro_template",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "check:watch": "astro check --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts,.astro",
    "lint:check": "eslint . --ext .js,.ts,.astro",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:performance": "pnpm build && vitest tests/lighthouse-performance.test.ts",
    "test:lighthouse": "pnpm build && vitest tests/lighthouse-performance.test.ts --reporter=verbose",
    "test:ci": "pnpm build && vitest --reporter=json --outputFile=test-results.json",
    "validate:lighthouse": "pnpm test:performance",
    "cypress:open": "cypress open"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.3.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.1",
    "@tailwindcss/vite": "^4.1.10",
    "astro": "^5.10.0",
    "daisyui": "^5.0.43",
    "sharp": "^0.34.2",
    "tailwindcss": "^4.1.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@testing-library/dom": "~10.4.0",
    "@testing-library/jest-dom": "~6.6.3",
    "@types/jsdom": "~21.1.7",
    "@types/node": "~24.0.3",
    "@typescript-eslint/eslint-plugin": "~8.34.1",
    "@typescript-eslint/parser": "~8.34.1",
    "@vitest/coverage-v8": "~3.2.4",
    "@vitest/ui": "~3.2.4",
    "cypress": "~14.5.0",
    "eslint": "~9.29.0",
    "eslint-config-prettier": "~10.1.5",
    "eslint-plugin-astro": "~1.3.1",
    "eslint-plugin-jsx-a11y": "~6.10.2",
    "jsdom": "~26.1.0",
    "node-html-parser": "~7.0.1",
    "prettier": "~3.5.3",
    "prettier-plugin-astro": "~0.14.1",
    "prettier-plugin-tailwindcss": "~0.6.13",
    "shiki": "~3.7.0",
    "typescript": "~5.8.3",
    "vitest": "~3.2.4",
    "zod": "~3.25.67"
  }
}